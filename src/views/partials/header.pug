header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav 
        ul 
            li 
                a(href="/search")
                    i.fas.fa-search
            if loggedIn 
                li 
                    a(href="/users/logout") Log Out
                li 
                    a(href="/users/edit") Edit Profile
                li 
                    a(href="/videos/upload") Upload Video
                li 
                    a(href=`/users/${loggedInUser._id}`)
                        if !loggedInUser.avatarUrl
                            i.far.fa-grin-tongue
                        else if loggedInUser.socialOnly
                            img(src=loggedInUser.avatarUrl crossorigin).avatar.avatar--medium
                        else 
                            img(src="/" + loggedInUser.avatarUrl).avatar.avatar--medium


            else
                li 
                    a(href="/login") Login
                li 
                    a(href="/join").header__btn Join

        