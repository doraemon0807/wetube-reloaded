extends ../base
include ../mixins/video

block content 
    div.search__container
        form(method="GET").search__form
            input(name="keyword", placeholder="Search by title", value=keyword, type="text")
            button
                i.fas.fa-search
    if searched
        span.search__result Searched with "#{keyword}" : #{videos.length} #{videos.length===1? "video":"videos"} found.
        div.video-grid
            each video in videos 
                +video(video)