extends ../base

block content 
    if errorMessage 
        span.error-message=errorMessage
    form(method="POST").join__form.form
        input(name="name", type="text", required, placeholder="Name", maxlength=20)
        input(name="email", type="email", required, placeholder="Email")
        input(name="username", type="text", required, placeholder="Username", maxlength=20)
        input(name="password", type="password", required, placeholder="Password")
        input(name="password2", type="password", required, placeholder="Confirm Password")
        input(name="location", type="text", placeholder="Location")
        input(type="submit", placeholder="", value="Join")
        include ../partials/social-login
    div.auth-switch
        span Already have an account? 
        a(href="/login") Log In Now &rarr;