extends ../base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="username", type="text", required, placeholder="Username")
        input(name="password", type="password", required, placeholder="Password")
        input(type="submit", placeholder="", value="Login")
        br
        a(href="/users/github/start") Continue with GitHub
        br
        a(href="/users/kakao/start") Continue with KakaoTalk
    hr
    div 
        span Don't have an account? 
        a(href="/join") Create Now &rarr;