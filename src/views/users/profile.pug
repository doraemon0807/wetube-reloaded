extends ../base
include ../mixins/video

block content 
    div.profile
        div.profile__data
            if !user.avatarUrl
                i.far.fa-grin-tongue
            else if user.socialOnly
                img(src=user.avatarUrl crossorigin="anonymous").avatar.avatar--big
            else 
                img(src="/" + user.avatarUrl).avatar.avatar--big

            h3=user.name
        div.video-grid
            each video in user.videos 
                +video(video)
            else 
                span.empty__message No videos found.


        div.profile__user-comments
            each comment in user.comments
                li=comment.text
            else 
                span.empty__message No comments found.