extends ../base
include ../mixins/video

block content 
    div.profile__data
        if !loggedInUser.avatarUrl
            i.far.fa-grin-tongue
        else 
            img(src="/" + user.avatarUrl).avatar.avatar--big
        h3=user.name
    div.video-grid
        each video in user.videos 
            +video(video)
        else 
            span.empty__message No videos found.