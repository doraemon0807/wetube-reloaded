extends ../base

block content
    if errorMessage 
        span.error-message=errorMessage
    form(method="POST", enctype="multipart/form-data").edit-profile__form
        label(for="avatar") Avatar
        input(name="avatar", type="file", id="avatar", accept="image/*")
        input(name="name", type="text", required, placeholder="Name", value=loggedInUser.name, maxlength=20)
        input(name="email", type="email", required, placeholder="Email", value=loggedInUser.email)
        input(name="username", type="text", required, placeholder="Username", value=loggedInUser.username, maxlength=20)
        input(name="location", type="text", placeholder="Location", value=loggedInUser.location)
        input(type="submit", placeholder="", value="Update Profile")

        if (!loggedInUser.socialOnly)
            div.edit-profile__password.auth-switch
                a(href="change-password") Change Password &rarr;
